@echo off
:: BatchGotAdmin
::-------------------------------------
REM  --> Check for permissions
>nul 2>&1 "%SYSTEMROOT%\system32\cacls.exe" "%SYSTEMROOT%\system32\config\system"

REM --> If error flag set, we do not have admin.
if '%errorlevel%' NEQ '0' (

    echo Requesting administrative privileges...
    goto UACPrompt
	
) else ( 

	goto gotAdmin 

)

::Funcion para pedir permiso de Administrador
:UACPrompt
    echo Set UAC = CreateObject^("Shell.Application"^) > "%temp%\getadmin.vbs"
    set params = %*:"="
    echo UAC.ShellExecute "cmd.exe", "/c %~s0 %params%", "", "runas", 1 >> "%temp%\getadmin.vbs"

    "%temp%\getadmin.vbs"
    del "%temp%\getadmin.vbs"
    exit /B	

::Funcion que valida si es Administrador
:gotAdmin
    pushd "%CD%"
    CD /D "%~dp0"
	goto createLinkSimbolic

::Funcion para crear links simbolicos
:createLinkSimbolic
	rmdir "public\node_modules" "public\assets"  
	mklink /D "public\node_modules" "..\node_modules"
	mklink /D "public\assets" "..\resources\assets"    
	echo +++++++++++++++++++++++++++++++++++++++++
	echo + Links simbolics created successfully. +
	echo +++++++++++++++++++++++++++++++++++++++++
	
exit